{
  "$schema": "./ui-options.schema.json",
  "description": "Shared UI configuration options for Pankha frontend and agent tray applications. This file is the single source of truth for all dropdown values and configuration options.",
  "version": "1.0.0",
  "options": {
    "updateInterval": {
      "label": "Agent Rate",
      "description": "Agent data collection interval",
      "unit": "s",
      "values": [0.5, 1, 2, 3, 5, 10, 15, 30],
      "default": 3,
      "min": 0.5,
      "max": 30
    },
    "sensorTolerance": {
      "label": "Sensor Tolerance",
      "description": "Temperature tolerance for sensor deduplication",
      "unit": "°C",
      "values": [0.25, 0.5, 1.0, 1.5, 2.0, 2.5, 3.0, 3.5, 4.0, 4.5, 5.0],
      "default": 0.5,
      "min": 0.25,
      "max": 5.0
    },
    "fanStep": {
      "label": "Fan Step",
      "description": "Incremental percentage change in fan speed when adjusting towards target temperature",
      "unit": "%",
      "values": [
        { "value": 3, "label": "3%" },
        { "value": 5, "label": "5%" },
        { "value": 10, "label": "10%" },
        { "value": 15, "label": "15%" },
        { "value": 25, "label": "25%" },
        { "value": 50, "label": "50%" },
        { "value": 100, "label": "Disable (instant)" }
      ],
      "default": 5,
      "min": 3,
      "max": 100
    },
    "hysteresis": {
      "label": "Hysteresis",
      "description": "Temperature tolerance before adjusting fan speed. Higher values = more stability, lower values = more responsive cooling",
      "unit": "°C",
      "values": [
        { "value": 0.0, "label": "Disable (instant)" },
        { "value": 0.5, "label": "0.5°C" },
        { "value": 1.0, "label": "1.0°C" },
        { "value": 2.0, "label": "2.0°C" },
        { "value": 3.0, "label": "3.0°C" },
        { "value": 5.0, "label": "5.0°C" },
        { "value": 7.5, "label": "7.5°C" },
        { "value": 10.0, "label": "10.0°C" }
      ],
      "default": 3.0,
      "min": 0.0,
      "max": 10.0
    },
    "emergencyTemp": {
      "label": "Emergency Temp",
      "description": "Temperature threshold that overrides all controls and sets fans to 100% immediately",
      "unit": "°C",
      "values": [70, 75, 80, 85, 90, 95, 100],
      "default": 85,
      "min": 70,
      "max": 100
    },
    "logLevel": {
      "label": "Log Level",
      "description": "Agent logging verbosity",
      "values": [
        { "value": "TRACE", "label": "TRACE" },
        { "value": "DEBUG", "label": "DEBUG" },
        { "value": "INFO", "label": "INFO" },
        { "value": "WARN", "label": "WARN" },
        { "value": "ERROR", "label": "ERROR" }
      ],
      "default": "INFO"
    }
  }
}
