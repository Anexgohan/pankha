#!/usr/bin/env python3
import sys
import os
from pathlib import Path

# If not running from the local venv, re-execute using the venv's python
# This allows the script to be portable and not require a hardcoded shebang path.
venv_python = Path(__file__).parent / "venv" / "bin" / "python3"
if venv_python.exists() and sys.executable != str(venv_python.absolute()):
    os.execv(str(venv_python), [str(venv_python)] + sys.argv)

"""
Pankha Mock Agents - CLI Entry Point

Lightweight mock agent system for testing Pankha backend at scale.
Runs multiple simulated agents in a single process.

Usage:
    mock-agents --help
    mock-agents --build
    mock-agents --start
    mock-agents --stop
    mock-agents --status
    mock-agents --restart
"""

import sys
from pathlib import Path

# Add src/ to path
sys.path.insert(0, str(Path(__file__).parent / "src"))

from cli import main

if __name__ == "__main__":
    main()
